<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_welcome_explorer">

        <TextView
            android:id="@+id/waitlistBannerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:text="@string/waitlist_title"
            android:textAppearance="@style/BoldTitle2"
            android:textColor="@color/autio_white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/waitlistDivider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waitlistBannerTitle"
            app:srcCompat="@drawable/divider_account_page" />

        <TextView
            android:id="@+id/watilistText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:justificationMode="none"
            android:text="@string/waitlist_content_response"
            android:textAlignment="center"
            android:textAppearance="@style/Title"
            android:textColor="@color/autio_white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waitlistDivider" />


        <ImageView
            android:id="@+id/notifications_enabled"
            style="@style/Button.Shape"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="68dp"
            android:text="@string/enable_notifications"
            android:textColor="@color/autio_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/watilistText"
            app:srcCompat="@drawable/icons8_done_50" />

        <ImageView
            android:id="@+id/waitlistAutioLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifications_enabled"
            app:srcCompat="@drawable/group_699" />

        <TextView
            android:id="@+id/terms_of_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="@string/termsOfService"
            android:textColor="@color/gray_letter"
            android:textSize="8sp"
            app:layout_constraintEnd_toStartOf="@+id/privacy_policy"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waitlistAutioLogo" />

        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/privacyPolicy"
            android:textColor="@color/gray_letter"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/waitlistAutioLogo"
            app:layout_constraintEnd_toStartOf="@+id/security"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/terms_of_service"
            app:layout_constraintTop_toTopOf="@+id/terms_of_service" />

        <TextView
            android:id="@+id/security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/security"
            android:textColor="@color/gray_letter"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/privacy_policy"
            app:layout_constraintTop_toTopOf="@+id/terms_of_service" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-8dp"
            android:fontFamily="@font/sf_pro_text_regular"

            android:text="Done"
            android:textColor="@color/autio_white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/notifications_enabled"
            app:layout_constraintStart_toEndOf="@+id/notifications_enabled"
            app:layout_constraintTop_toTopOf="@+id/notifications_enabled"
            tools:text="Done" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
