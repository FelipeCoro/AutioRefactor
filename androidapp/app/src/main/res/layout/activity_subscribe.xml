<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.usecases.subscribe.SubscribeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/subscribe_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSliderSubscribe"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:scrollbarSize="5dp"
            app:sliderIndicatorSelectedColor="#8E8E8E"
            app:sliderIndicatorUnselectedColor="#C4C4C4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sliderIndicatorMarginBottom="118dp"/>

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewInterBold"
            android:text="@string/most_popular"
            app:layout_constraintEnd_toEndOf="@+id/cardView3month"
            app:layout_constraintTop_toBottomOf="@+id/imageSliderSubscribe" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3month"
            app:cardBackgroundColor="@color/button_background"
            android:layout_marginHorizontal="12dp"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="12dp"
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/TextViewLoraRegular"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Traveler - only $3/month" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/gray_letter"
                    android:text="1 YEAR SUBSCRIPTION • $35.99" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/gray_letter"
                    android:fontFamily="@font/inter_regular"
                    android:text="You'll be reminded before renewal. You can cancel any time." />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:fontFamily="@font/inter_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_letter"
            android:textSize="12sp"
            android:text="35% OFF, BEST VALUE"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/cardView3month" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/fragment_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="@color/fragment_background"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewLoraBoldFragmentTitle"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single Trip" />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/gray_letter"
                        android:fontFamily="@font/inter_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="30 DAYS PASS • $749.00" />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/gray_letter"
                        android:fontFamily="@font/inter_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One-time payment." />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/fragment_background"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/fragment_background"
                android:padding="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewLoraBoldFragmentTitle"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventurer" />
                <TextView
                    android:textColor="@color/gray_letter"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="3 YEAR MEMBER • $107.97 $69.99" />
                <TextView
                    android:textColor="@color/gray_letter"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One-time payment." />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutTry5StoriesFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <Button
                android:id="@+id/btn_stories_free1"
                style="@style/Button.Shape.transparent"
                android:drawableEnd="@drawable/free_trial_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try 5 Stories Free" />

        </LinearLayout>

        <RelativeLayout
            android:background="@color/gray_donated"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:id="@+id/relativeLayoutMothDonation"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutTry5StoriesFree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:textColor="@color/gray_letter"
                android:fontFamily="@font/inter_regular"
                android:text="@string/_1_is_donated_for_every_purchase_to_nsupport_storytellers_in_underserved_ncommunities_learn_more" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:src="@drawable/donated_image" />
        </RelativeLayout>

        <LinearLayout
            android:padding="18dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/splash_back"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutMothDonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:text="@string/_4_9_5_stars"
                android:textSize="22sp"
                android:fontFamily="@font/lora_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/text_view_border"
                android:padding="18dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                </LinearLayout>
                <TextView
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/white"
                    android:text="@string/a_traveling_companion_not_to_be_missed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/lora_regular"
                    android:textColor="@color/white"
                    android:text="@string/my_family_and_i_travel_often_amp_the_stories_we_hear_are_informative_amp_interesting_even_listening_near_my_home_has_introduced_me_to_things_i_didn_t_know"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/white"
                    android:text="@string/camswphd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/text_view_border"
                android:padding="18dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                </LinearLayout>
                <TextView
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/white"
                    android:text="@string/focus_on_your_road_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/lora_regular"
                    android:textColor="@color/white"
                    android:text="@string/this_app_really_brings_the_trip_home_on_a_personal_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/white"
                    android:text="@string/ron_tg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/text_view_border"
                android:padding="18dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/an_start" />
                </LinearLayout>
                <TextView
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/white"
                    android:text="@string/love_this"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/lora_regular"
                    android:textColor="@color/white"
                    android:text="@string/great_app_my_husband_and_i_are_fulltime_rv_rs_rv_n_free_and_this_is_the_perfect_app_to_use_while_traveling_the_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/white"
                    android:text="@string/rv_n_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                style="@style/Button.Shape"
                android:layout_marginTop="24dp"
                android:text="@string/choose_a_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_stories_free2"
                style="@style/Button.Shape.transparent"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="24dp"
                android:text="@string/try_5_stories_free"
                android:drawableEnd="@drawable/free_trial_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>