<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_onboarding"
    app:startDestination="@id/welcomeExplorerFragment">

    <fragment
        android:id="@+id/welcomeExplorerFragment"
        android:name="com.autio.android_app.ui.onboarding.fragments.WelcomeExplorerFragment"
        android:label="fragment_welcome_explorer"
        tools:layout="@layout/fragment_welcome_explorer">
        <action
            android:id="@+id/action_welcomeExplorerFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/welcomeExplorerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeExplorerFragment_to_authentication_nav"
            app:destination="@id/authentication_nav" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.autio.android_app.ui.onboarding.fragments.OnBoardingFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_onboarding_to_authentication_nav"
            app:destination="@id/authentication_nav"
            app:launchSingleTop="true"
            app:popUpTo="@id/authentication_nav" />
    </fragment>
    <include app:graph="@navigation/nav_authentication" />
</navigation>
