<resources>
    <!-- Base application theme. -->
    <style name="Theme.Androidapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">
            @color/white
        </item>
        <item name="colorPrimaryVariant">
            @color/black
        </item>
        <item name="colorOnPrimary">
            @color/white
        </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">
            @color/blue
        </item>
        <item name="colorSecondaryVariant">
            @color/gray_letter
        </item>
        <item name="colorOnSecondary">
            @color/black
        </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">
            ?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
    </style>
    <!-- TexView Lora Regular  -->
    <style name="TextViewLoraRegular" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/lora_regular
        </item>
        <item name="android:textColor">
            @color/lora_text_regular
        </item>
        <item name="android:textSize">
            22sp
        </item>
        <item name="android:gravity">
            center
        </item>
    </style>
    <!-- TexView Lora Bold  -->
    <style name="TextViewLoraBoldTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/lora_bold
        </item>
        <item name="android:textColor">
            @color/lora_text_bold
        </item>
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:gravity">
            center
        </item>
    </style>
    <!-- TexView Lora Fragment Title  -->
    <style name="TextViewLoraBoldFragmentTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/lora_bold
        </item>
        <item name="android:textColor">
            @color/lora_text_bold
        </item>
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:gravity">
            center
        </item>
    </style>
    <!-- TexView Inter Bold  -->
    <style name="TextViewInterBold" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/sf_pro_text_bold
        </item>
        <item name="android:textColor">
            @color/normal_text
        </item>
        <item name="android:textSize">
            11sp
        </item>
    </style>
    <!-- TexView Inter Regular  -->
    <style name="TextViewInterRegular" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="android:textColor">
            @color/normal_text
        </item>
        <item name="android:textSize">
            14sp
        </item>
    </style>
    <!-- TexView Inter Regular  -->
    <style name="TextViewInterRegularLight" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="android:textColor">
            @color/gray_letter
        </item>
        <item name="android:textSize">
            14sp
        </item>
    </style>

    <!-- BUTTONS -->

    <!-- Active -->
    <!-- Contained button with filling color -->
    <style name="Button.Active.Filled" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/button_text
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Outlined button with hard stroke -->
    <style name="Button.Active.Outlined.StrongStroke" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">
            @color/transparent
        </item>
        <item name="android:stateListAnimator">
            @null
        </item>
        <item name="android:textColor">
            @color/button_text
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="strokeWidth">
            1dp
        </item>
        <item name="strokeColor">
            @color/autio_blue_40
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Outlined button with soft stroke -->
    <style name="Button.Active.Outlined.SoftStroke" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">
            @color/transparent
        </item>
        <item name="android:stateListAnimator">
            @null
        </item>
        <item name="android:textColor">
            @color/button_text
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="strokeWidth">
            1dp
        </item>
        <item name="strokeColor">
            @color/autio_blue_40
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Text button -->
    <style name="Button.Text" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/transparent
        </item>
        <item name="android:textColor">
            #9C9FB5
        </item>
        <item name="android:stateListAnimator">
            @null
        </item>
        <item name="android:letterSpacing">
            0
        </item>
        <item name="android:textSize">
            15sp
        </item>
    </style>

    <!-- Inactive -->
    <!-- Contained button with filling color inactive -->
    <style name="Button.Inactive.Contained.Filled" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/button_text
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:alpha">
            .5
        </item>
        <item name="android:clickable">
            false
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Outlined button with hard stroke inactive -->
    <style name="Button.Inactive.Outlined.StrongStroke" parent="ThemeOverlay.AppCompat">
        <item name="android:background">
            @android:color/transparent
        </item>
        <item name="android:textColor">
            @color/button_text
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:alpha">
            .5
        </item>
        <item name="android:clickable">
            false
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Outlined button with soft stroke inactive -->
    <style name="Button.Inactive.Outlined.SoftStroke" parent="ThemeOverlay.AppCompat">
        <item name="android:background">
            @android:color/transparent
        </item>
        <item name="android:textColor">
            @color/button_text
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:strokeWidth">
            1
        </item>
        <item name="android:strokeColor">
            #CECFDA
        </item>
        <item name="android:alpha">
            .5
        </item>
        <item name="android:clickable">
            false
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>

    <!-- Button Gray -->
    <style name="Button.Gray" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/gray_letter
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Button Style White-->
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/white
        </item>
        <item name="android:textColor">
            @color/blue
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Button Shape light Style   -->
    <style name="Button.Shape.transparent" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/transparent
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="strokeWidth">
            1dp
        </item>
        <item name="strokeColor">
            @color/button_border
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:stateListAnimator">
            @null
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Button Shape light Style   -->
    <style name="Button.Shape" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/fragment_background
        </item>
        <item name="android:textColor">
            @color/button_border_text
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="strokeWidth">
            1dp
        </item>
        <item name="strokeColor">
            @color/button_border
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- Button Shape Strong Style   -->
    <style name="Button.Strong" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">
            @color/fragment_background
        </item>
        <item name="android:textColor">
            @color/button_border_text
        </item>
        <item name="android:fontFamily">
            @font/sf_pro_text_regular
        </item>
        <item name="strokeWidth">
            1dp
        </item>
        <item name="strokeColor">
            @color/white
        </item>
        <item name="cornerRadius">
            5dp
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:letterSpacing">
            0
        </item>
    </style>
    <!-- BottomNavigationView  -->
    <style name="BottomNavigationViewAutio" parent="ThemeOverlay.AppCompat">
        <item name="background">
            @color/bn_background
        </item>
        <item name="itemRippleColor">
            @color/unselected_item
        </item>
        <item name="itemIconTint">
            @color/unselected_item
        </item>
    </style>
    <!--  CardView Subscribe  -->
    <style name="CardView.Subscribe" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">
            @color/fragment_background
        </item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_background
        </item>
    </style>
</resources>