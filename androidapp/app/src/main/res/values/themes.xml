<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Androidapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_background</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue_background</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TexView Lora Regular  -->
    <style name="TextViewLoraRegular" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:textColor">@color/lora_text_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- TexView Lora Bold  -->
    <style name="TextViewLoraBoldTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/lora_bold</item>
        <item name="android:textColor">@color/lora_text_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- TexView Lora Fragment Title  -->
    <style name="TextViewLoraBoldFragmentTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/lora_bold</item>
        <item name="android:textColor">@color/lora_text_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- TexView Inter Bold  -->
    <style name="TextViewInterBold" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">11sp</item>
    </style>
    <!-- TexView Inter Regular  -->
    <style name="TextViewInterRegular" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- TexView Inter Regular  -->
    <style name="TextViewInterRegularLight" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/gray_letter</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Button Style   -->
    <style name="Button.Blue" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- Button Style   -->
    <style name="Button.Gray" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/gray_letter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- Button Style White-->
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- Button Shape light Style   -->
    <style name="Button.Shape.transparent" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/gray_letter</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/button_border</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- Button Shape light Style   -->
    <style name="Button.Shape" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/button_border_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/button_border</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- Button Shape Strong Style   -->
    <style name="Button.Strong" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/button_border_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- BottomNavigationView  -->
    <style name="BottomNavigationViewAutio" parent="ThemeOverlay.AppCompat">
        <item name="background">@color/bn_background</item>
        <item name="itemRippleColor">@color/unselected_item</item>
        <item name="itemIconTint">@color/unselected_item</item>
    </style>
    <!--  CardView Subscribe  -->
    <style name="CardView.Subscribe" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/fragment_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>